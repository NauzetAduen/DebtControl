<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DebtActivity"
    android:padding="10dp">

    <TextView
        style="@style/debt_name_style"
        android:id="@+id/tv_update_debt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gym"
        android:layout_marginBottom="15dp"
        />
    <TextView
        style="@style/debt_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paquito"
        android:id="@+id/tv_update_user"
        android:layout_marginBottom="15dp"/>


    <TextView
        android:text="Se lo debo de las putas drogas"
        android:id="@+id/tv_update_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="40â‚¬"
            android:layout_weight="2"
            android:id="@+id/tv_update_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="NOT PAID"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_update_state"/>
        <Button
            android:text="PAY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>
